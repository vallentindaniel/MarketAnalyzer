# Database Configuration
# Choose database type: 'postgresql' (default) or 'mysql'
DB_TYPE=postgresql

# PostgreSQL configuration (when DB_TYPE=postgresql)
DATABASE_URL=postgresql://username:password@localhost:5432/market_analyzer

# MySQL configuration (when DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=yourusername
MYSQL_PASSWORD=yourpassword
MYSQL_DATABASE=market_analyzer

# Application configuration
SESSION_SECRET=your_secure_session_key_change_this